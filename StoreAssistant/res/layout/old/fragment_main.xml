        <Button android:id="@+id/back_to_choose_market"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="成都"
        	android:background="#00000000"
        	android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:onClick="toChooseMarket"
            />
        
        <ImageView android:id="@+id/imageview_back_to_choose_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            />
        
        <TextView 
            android:id="@+id/textview_market_name_fragment_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都国际商贸城"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        
        
        
        <EditText
            android:id="@+id/edit_text_search_box"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_search_input"
            android:hint="请输入关键字"
            android:textSize="13sp"
            android:paddingLeft="5dp"
            android:singleLine="true" 
            android:layout_gravity="center_vertical|right"
            />
        
        <ImageView 
