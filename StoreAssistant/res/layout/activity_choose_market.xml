<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
   <FrameLayout 
    android:id="@+id/back_choose_market"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:orientation="horizontal"
    android:background="@drawable/btn_titlebar_current"
    >
    <ImageButton 
        android:id="@+id/back_image_car_break_rules"
        android:layout_width="60dp"
    	android:layout_height="54dp"
        android:background="@drawable/button_back_normal"
        android:onClick="back"
        />
    <TextView 
        android:id="@+id/back_title_car_break_rules"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:text="选择市场"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        />
</FrameLayout>
    
    <ScrollView android:id="@+id/scrollview_choose_market"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
    	
        <LinearLayout
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
            >
            <TextView 
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:text="成都"
    			android:textSize="20sp"
    			android:textColor="@color/black"
    			android:background="#D9D9D9"
    			android:padding="5dp"
                />
            <Button android:id="@+id/btn_market_hhcfzsc_choose_market"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:gravity="left"
    			android:text="荷花池服装市场"
    			android:textSize="15sp"
    			android:textColor="@color/black"
    			android:padding="10dp"
    			android:background="@color/white"
    			android:onClick="enterMarket"
                />
            <LinearLayout 
                android:layout_width="match_parent"
    			android:layout_height="1dp"
    			android:layout_marginLeft="10dp"
    			android:layout_marginRight="10dp"
    			android:background="#D9D9D9"
    			/>
            <Button android:id="@+id/btn_market_cdgjsmc_choose_market"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:gravity="left"
    			android:text="成都国际商贸城"
    			android:textSize="15sp"
    			android:textColor="@color/black"
    			android:background="@color/white"
    			android:padding="10dp"
    			android:onClick="enterMarket"
                />
            <TextView 
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:text="南充"
    			android:textSize="20sp"
    			android:textColor="@color/black"
    			android:background="#D9D9D9"
    			android:padding="5dp"
                />
            <Button android:id="@+id/btn_market_ncpfzx_choose_market"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:gravity="left"
    			android:text="南充批发中心"
    			android:textSize="15sp"
    			android:textColor="@color/black"
    			android:background="@color/white"
    			android:padding="10dp"
    			android:onClick="enterMarket"
                />
            
            
        </LinearLayout>
        
    </ScrollView>
    

</LinearLayout>
